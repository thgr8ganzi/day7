
        <!--우측 콘텐츠 헤더영역 -->
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10">
                <h2>신규 게시글 등록</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="/Home/Index">Home</a>&nbsp;>&nbsp;
                    </li>
                    <li>
                        <a>신규 게시글</a>
                    </li>
                    <li class="active">
                        <strong>등록</strong>
                    </li>
                </ol>
            </div>
            <div class="col-lg-2">

            </div>
        </div>

        <!--우측 콘텐츠 영역 -->
        <div class="wrapper wrapper-content">
            <form action="/article/create" method="post" id="articleForm">
            <div class="ibox-content m-b-sm border-bottom">

<!--                제목-->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">글제목</label>
                            <input type="text" class="form-control" id="title" name="title">
                        </div>
                    </div>
                </div>

<!--                글내용-->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">글내용</label>
                            <textarea class="form-control" rows="10" cols="5" id="content" name="content"></textarea>
                        </div>
                    </div>
                </div>

<!--                게시여부 표시-->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">게시여부</label>
                            <select class="form-control" id="display_yn" name="display_yn">
                                <option value="Y">게시함</option>
                                <option value="N">게시안함</option>
                            </select>
                        </div>
                    </div>

                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">저장</button>
                    <a href="/article/list" class="btn btn-info">목록</a>
                </div>

            </div>
            </form>
        </div>


<script>
    // 페이지 로드시 실행
    $(document).ready(function () {
        $('#title').focus();
    });


    // 입력 요소들의 유효성검사를 실시후 action 페이지로 전송
    $('#articleForm').submit(function (e) {
        e.preventDefault();

        var title = $('#title').val();
        var content = $('#content').val();
        var display_yn = $('#display_yn').val();

        if (title == '') {
            alert('제목을 입력하세요.');
            $('#title').focus();
            return false;
        }

        if (content == '') {
            alert('내용을 입력하세요.');
            $('#content').focus();
            return false;
        }

        if (display_yn == '') {
            alert('게시여부를 선택하세요.');
            $('#display_yn').focus();
            return false;
        }

    });
</script>
